<simpleChildWindow:ChildWindow x:Class="Becarios.View.TicketPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
             xmlns:local="clr-namespace:Becarios.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600" ShowCloseButton="True" CloseOnOverlay="True"
							   GlowBrush="{DynamicResource AccentColorBrush}"
							   BorderBrush="{DynamicResource AccentColorBrush}">
    <Grid Height="600" Width="600">
        <DockPanel>
            <WindowsFormsHost>
                <rv:ReportViewer x:Name="reportViewer" Load="reportViewer_Load"/>
            </WindowsFormsHost>
        </DockPanel>
    </Grid>
</simpleChildWindow:ChildWindow>
